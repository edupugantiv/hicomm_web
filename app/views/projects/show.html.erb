Key Screen 4: Project Page<br />

<%=@project.name%> <br />
<%=@participants.size%> members <br />
Location: <%=@project.location%><br />
Scale: <%=@project.scale%><br />

Contact:<br />
<%=@project_manager.name%>: Project Manager <br /> 
Email: <%=@project_manager.email%> <br />

<%if can? :transfer_leadership, @project%> 
	<%=button_to "Manage Project", manage_project_path(@project), :method => 'get'%>
<%elsif can? :leave, @project%>
	<%=button_to "Leave Project", leave_path(@project), :method => 'put'%>
<% else %> 
	<%=button_to "Join Project", join_path(@project), :method => 'put'%>
<%end%>

Conversations: <br />
<% if can? :create, @conversation %>
	<%=button_to "New Conversation", new_convo_path(@project), :method => 'get'%>
<% end %>
<%@conversations.each do |conversation|%> 
	<%=conversation.name%> 
	<% if can? :update, @conversation %>
		<%=button_to "View", view_convo_path(conversation), :method => 'get'%>
	<%end%>
<%end%>

Members: <br />
<%if can? :add_users, @project %> 
	<%=button_to "Add Users", pick_project_users_path(@project), :method => 'get'%>
<%end%>

<%@participants.each do |participant|%> 
	<%=participant.name%> 
<%end%> 







