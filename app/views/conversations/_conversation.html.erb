<table > 
	<tr> 
		<td>
			<%=conversation.name%> 
		</td>
	</tr>
	<tr>
		<td>
			<%conversation.users.each do |user| %> 
				<%=user.name%> 
			<%end%>
		</td>
	</tr>
</table>
<table border="1" class="inbox" width="80%">
			<%conversation.messages.each do |message| %>  
				<tr><td>
					<%=link_to message.sender.name, user_path(message.sender)%>: <%=message.body%> <br>
					<%=message.sent%><br/>
				</td></tr>
			<%end%>
	<tr> 
		<td>
			<% if can? :leave, conversation.project%> 
				<%= render partial: 'messages/new' %>
			<%end%>
		</td>
	</tr>
</table>
