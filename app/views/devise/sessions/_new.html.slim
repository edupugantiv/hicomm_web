                  small *
          .form-group
            .row
              .col-md-11
                = f.password_field :password, placeholder: "Password", class: "form-control"
              .col-md-1.sign-up-text-box
                h1
                  small *
          .form-group
            .row.m-t-20
              .col-md-offset-3.col-md-6
                button.button-format Sign In

