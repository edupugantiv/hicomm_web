Personal Page <br />
<%=@user.name%> <br />
<%=@user.job%><br />
<%=@user.location%><br />
Contact: <%=@user.email%> / Phone Number: <%=@user.mobile%> <br />

<% if can? :update, @user %>
	<%=button_to "Manage My Account", manage_user_path(@user), :method => 'get'%>
<% elsif cannot? :add_colleague, @user %> 
	<%=button_to "Remove Contact", remove_contact_path(@user), :method => 'put' %>
<% else %> 	
	<%=button_to "Add Contact", add_contact_path(@user), :method => 'put' %>
<%end%>
	

Projects: <br /> 
<%@projects.each do |project| %> 
	<%=project.name%> <%=button_to "View Project", project_path(:project_id =>project, :conversation_id => project.conversations.first), :method => 'get' %><br /> 
<%end%> 

Groups: <br /> 
<%@groups.each do |group| %> 
	<%=group.name%> <br /> 
<%end%> 

Contacts: <br />
<%@contacts.each do |colleague| %> 
	<%=colleague.name%> <%=button_to "View Personal Page", user_path(colleague), :method => 'get' %>
<%end%>
